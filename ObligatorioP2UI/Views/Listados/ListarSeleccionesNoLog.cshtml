@using Dominio
@{
}
@model List<Seleccion>

<h3>Listado de selecciones ordenadas</h3>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Jugadores</th>
        </tr>
    </thead>

    <tbody>
        @{
            int i = 0;

            foreach (Seleccion s in Model)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td>@s.unPais.Nombre</td>

                    <td>
                        @foreach (Jugador j in s.jugadores)
                        {
                            @j.NombreCompleto <br />
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
