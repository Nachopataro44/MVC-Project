@using Dominio
@using Microsoft.AspNetCore.Http
@{
    Sistema sistema = Sistema.Instancia;
}
@model Partido

    @if(ViewBag.Error == null) { 
        <h3>Listado de selecciones ordenadas</h3>
        
        <table class="table">
            <thead>
                <tr>
                    <th>Fase</th>
                    <th>Fecha</th>
                    <th>Seleccion 1</th>
                    <th>Seleccion 2</th>
                    <th>Resultado</th>
                </tr>
            </thead>

            @if (Model.Tipo == "Fase de grupos")
            {
                <tbody>
                    @{
                    <td>@Model.Tipo</td>
                    <td>@Model.Fecha</td>
                    @foreach (Seleccion s in Model.selecciones)
                    {
                        <td>@s.unPais.Nombre @sistema.ObtenerGolesDeSeleccion(s.unPais.CodigoA3, Model.Id)</td>
                    }
                    }
                    </tbody>

             }
        </table>
     }else
     {
        <div class="alert alert-danger" role="alert">
            @ViewBag.NombreError
        </div>
     }